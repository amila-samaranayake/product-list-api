      "skipLibCheck": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": ".",
      "resolveJsonModule": true,
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*.ts"
    ]
  }